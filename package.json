{
  "name": "slack-summarizer",
  "version": "1.0.0",
  "description": "A Slack app that ingests messages and produces daily summaries",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx src/server.ts",
    "secure": "node secure-server.js",
    "certs": "node generate-certs.js",
    "setup:https": "npm run certs && npm run secure",
    "cron:run": "tsx src/tasks.ts",
    "ingest:once": "tsx src/ingest.ts",
    "summary": "node scripts/summary.js",
    "summary:days": "node scripts/summary.js --days",
    "summary:daily": "node scripts/daily-summary.js",
    "summary:hourly": "node scripts/hourly-summarizer.js",
    "db:check": "node scripts/check-database.js",
    "db:seed": "node scripts/seed-database.js",
    "test": "jest",
    "lint": "eslint .",
    "format": "prettier --write .",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "seed": "tsx scripts/seed.ts",
    "setup:supabase": "node scripts/setup-supabase.js",
    "deploy": "bash ./deploy.sh",
    "deploy:windows": "powershell -ExecutionPolicy Bypass -File ./deploy.ps1",
    "deploy:prod": "bash ./deploy-production.sh",
    "deploy:prod:windows": "powershell -ExecutionPolicy Bypass -File ./deploy-production.ps1",
    "validate": "node scripts/validate-env.js",
    "setup:hourly": "powershell -ExecutionPolicy Bypass -File scripts/setup-hourly-task.ps1",
    "channels": "node scripts/find-channels.js",
    "launcher": "node launcher.js",
    "docker:start": "docker-compose up -d",
    "docker:logs": "docker-compose logs -f",
    "docker:stop": "docker-compose down"
  },
  "keywords": [
    "slack",
    "bot",
    "summary",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "@slack/bolt": "^3.15.0",
    "@slack/web-api": "^6.11.2",
    "@supabase/supabase-js": "^2.58.0",
    "chrono-node": "^2.7.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-cron": "^3.0.2",
    "openai": "^4.20.0",
    "pg": "^8.16.3",
    "pino": "^8.15.0",
    "pino-pretty": "^10.2.0",
    "selfsigned": "^2.4.1",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.7",
    "@types/node-cron": "^3.0.8",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "eslint": "^8.48.0",
    "jest": "^29.6.4",
    "nock": "^13.3.3",
    "prettier": "^3.0.3",
    "prisma": "^5.0.0",
    "ts-jest": "^29.1.1",
    "tsx": "^3.12.8",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=20"
  }
}
